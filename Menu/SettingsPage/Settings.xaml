<UserControl x:Class="Menu.SettingsPage.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:Menu.SettingsPage"
             xmlns:local="clr-namespace:Menu"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance settings:SettingsViewModel,
                                         IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="10,5,10,5" />
        </Style>
        <local:SizePercentageConverter x:Key="PercentageConverter"/>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Style="{StaticResource for_scrollviewer}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <StackPanel CanHorizontallyScroll="False" CanVerticallyScroll="True" x:Name="DockPanelSettings"  Margin="40" Background="{DynamicResource clBr}">
                <Label Content="Choose Theme" Foreground="{DynamicResource clBrMenu}" Style="{StaticResource Headings}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Height="auto" x:Name="whiteTheme" Click="SetWhiteTheme">
                            <StackPanel>
                                <Image Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.35, ElementName=DockPanelSettings, Path=ActualWidth}" Source="/images/WhiteTheme.PNG" />
                            </StackPanel>
                        </Button>
                        <Button Height="auto" x:Name="sepiaTheme" Click="SetSepiaTheme">
                            <StackPanel>
                                <Image Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.35, ElementName=DockPanelSettings, Path=ActualWidth}" Source="/images/SepiaTheme.PNG" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button Height="auto" x:Name="darkBlueTheme" Click="SetDarkBlueTheme">
                            <StackPanel>
                                <Image Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.35, ElementName=DockPanelSettings, Path=ActualWidth}" Source="/images/DarkBlueTheme.PNG" />
                            </StackPanel>
                        </Button>
                        <Button Height="auto" x:Name="nightTheme" Click="SetNightTheme">
                            <StackPanel>
                                <Image Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.35, ElementName=DockPanelSettings, Path=ActualWidth}" Source="/images/DarkTheme.PNG" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
