<UserControl x:Class="Menu.SettingsPage.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:Menu.SettingsPage"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance settings:SettingsViewModel,
                                         IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="40" Background="{DynamicResource clBr}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="whiteTheme" Click="SetWhiteTheme"/>
                    <Button x:Name="sepiaTheme" Click="SetSepiaTheme"/>
                    <Button x:Name="darkBlueNight" Click="SetDarkBlueTheme"/>
                    <Button x:Name="nightTheme" Click="SetNightTheme"/>
                </StackPanel>
                <TextBlock Foreground="{DynamicResource clBrText}" x:Name="settingsTextBlock"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
