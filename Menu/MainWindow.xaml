<Window x:Name="mainWindow" x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        xmlns:UserControl="clr-namespace:Menu"
        mc:Ignorable="d"
        Title="Reader" Height="700" Width="1150" WindowState="Normal" ResizeMode="CanResizeWithGrip" MinHeight="300" MinWidth="850">
    <Window.Resources>
        <SolidColorBrush x:Key="clBr" Color="BlanchedAlmond" />
    </Window.Resources>
    <Grid Name="mainGrid" Background="{StaticResource clBr}" >
        <DockPanel>
            <StackPanel Margin="40">
                <Label Content="Menu" Style="{StaticResource Headings}" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Menu Name="menu" Style="{StaticResource TextSettings}" Width="auto" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical"  Background="{StaticResource clBr}" />
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>
                    <MenuItem Header="Main Page" Command="{Binding MainCommand}"/>
                    <MenuItem Header="Library Page" Command="{Binding LibCommand}"/>
                    <MenuItem Header="Continue reading" Click="OpenBook"/>
                    <MenuItem Header="Edit your library">
                        <MenuItem Header="Add a book" Click="AddBook"/>
                        <MenuItem Header="Remove a book" Click="RemoveBook"/>
                    </MenuItem>
                    <MenuItem Header="Settings"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit"/>
                </Menu>
            </StackPanel>
            <Grid>
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>
