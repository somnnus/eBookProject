        </ControlTemplate>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
        </Style>-->

    </Window.Resources>
    <Grid>
        <Canvas Background="Bisque">
            <StackPanel Canvas.Top="140" Canvas.Left="35" Height="132" Width="226">
                <TextBlock Style="{StaticResource TextBlockSettings}"><Hyperlink NavigateUri="#" Style="{StaticResource HyperlinkSettings}">Вернуться к прочтению</Hyperlink></TextBlock>
                <TextBlock Style="{StaticResource TextBlockSettings}"><Hyperlink NavigateUri="#" Style="{StaticResource HyperlinkSettings}">Перейти в библиотеку</Hyperlink></TextBlock>
                <TextBlock Style="{StaticResource TextBlockSettings}"><Hyperlink NavigateUri="#" Style="{StaticResource HyperlinkSettings}">Настройки интерфейса</Hyperlink></TextBlock>
            </StackPanel>
            <Label Style="{StaticResource LabelSettings}" Canvas.Left="60" Canvas.Top="66" Height="61" Width="164">
                <Label.Template>
                    <ControlTemplate>
                        <Border Background="#FFE6C196" CornerRadius="50" Padding="2" BorderThickness="3" BorderBrush="#FFB99A7B">
                            <ContentPresenter Content="Меню" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Label.Template>
            </Label>

            <UserControl>
                <UserControl.Resources>
                    <local:SizePercentageConverter x:Key="PercentageConverter"/>
                </UserControl.Resources>
                <Grid Margin="320,50,0,0" Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.6, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Canvas}},Path=ActualWidth}">
                    <ListBox x:Name="listBoxBooks" Height="auto" Width="auto" Background="Bisque" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Image Width="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.2, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}},Path=ActualWidth}" Source='{Binding imagePath}'/>
                                    <TextBlock Text='{Binding author}'></TextBlock>
                                    <TextBlock Text='{Binding bookName}'></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemHeight="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.4, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}},Path=ActualWidth}" 
                                           ItemWidth="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.4, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}},Path=ActualWidth}" IsItemsHost="True" Orientation="Horizontal"  />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>
            </UserControl>
            <UserControl>
                <UserControl.Resources>
                    <local:SizePercentageConverter x:Key="PercentageConverter"/>
                </UserControl.Resources>
                <Label Margin="230,270,0,0" Height="{Binding Converter={StaticResource PercentageConverter}, ConverterParameter=0.05, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}},Path=ActualWidth}" Width="auto">
                    <Hyperlink TextDecorations="None" Click="LeftPageClick">
                        <ContentControl Template="{StaticResource ArrowLeft}"/>
                    </Hyperlink>
                </Label>
            </UserControl>
            <UserControl>
                <UserControl.Resources>
                    <local:SizePercentageConverter x:Key="PercentageConverter"/>
                </UserControl.Resources>
                <Label Height="{Binding ActualWidth, ConverterParameter=0.05, Converter={StaticResource PercentageConverter}, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" Width="auto" >
                    <Hyperlink TextDecorations="None" Click="RightPageClick">
                        <ContentControl HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Template="{StaticResource ArrowRight}"/>
                    </Hyperlink>
                </Label>
            </UserControl>
